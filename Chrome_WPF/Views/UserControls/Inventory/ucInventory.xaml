<UserControl
    x:Class="Chrome_WPF.Views.UserControls.Inventory.ucInventory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Chrome_WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="clr-namespace:Chrome_WPF.Helpers"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Chrome_WPF.Views.UserControls.Inventory"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!--  Converters  -->
        <converters:PageEqualityConverter x:Key="PageEqualityConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:IndexToVisibilityConverter x:Key="IndexToVisibilityConverter" />
        <converters:PercentageToWidthConverter x:Key="PercentageToWidthConverter" />
        <converters:PercentageToColorConverter x:Key="PercentageToColorConverter" />
        <converters:BoolToViewModeConverter x:Key="BoolToViewModeConverter" />
        <Style x:Key="iOSSwitchToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="150" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Background" Value="#DDD" />
            <Setter Property="BorderBrush" Value="#CCC" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border
                                x:Name="SwitchBackground"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20" />
                            <Border
                                x:Name="Thumb"
                                Width="70"
                                Height="30"
                                Margin="5,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Background="White"
                                CornerRadius="15">
                                <TextBlock
                                    x:Name="ThumbLabel"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Foreground="Black"
                                    Text="Vật lý" />
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchBackground" Property="Background" Value="Gray" />
                                <Setter TargetName="Thumb" Property="Margin" Value="75,0,0,0" />
                                <Setter TargetName="ThumbLabel" Property="Text" Value="Trực quan" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  PageItemTemplateSelector for pagination  -->
        <helper:PageItemTemplateSelector x:Key="PageItemTemplateSelector">
            <helper:PageItemTemplateSelector.PageNumberTemplate>
                <DataTemplate>
                    <Button
                        Width="40"
                        Height="40"
                        Margin="5,0"
                        Command="{Binding DataContext.SelectPageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding}"
                        Content="{Binding}"
                        ToolTip="{Binding}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource MaterialDesignIconButton}" TargetType="Button">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
                                <Style.Triggers>
                                    <DataTrigger Value="True">
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource PageEqualityConverter}">
                                                <Binding Path="." />
                                                <Binding Path="DataContext.CurrentPage" />
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <Setter Property="Background" Value="White" />
                                        <Setter Property="Foreground" Value="Black" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </DataTemplate>
            </helper:PageItemTemplateSelector.PageNumberTemplate>
            <helper:PageItemTemplateSelector.EllipsisTemplate>
                <DataTemplate>
                    <TextBlock
                        Width="40"
                        Height="40"
                        Margin="5,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Text="..." />
                </DataTemplate>
            </helper:PageItemTemplateSelector.EllipsisTemplate>
        </helper:PageItemTemplateSelector>

        <!--  Filter Button Style  -->
        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E6F0FA" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="0,0,10,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B3D4FC" />
                    <Setter Property="BorderBrush" Value="#A3BFFA" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CBD5E0" />
                    <Setter Property="Foreground" Value="#A0AEC0" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  Modern DataGrid Style  -->
        <Style x:Key="ModernDataGridStyle" TargetType="{x:Type DataGrid}">
            <Setter Property="RowBackground" Value="White" />
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5" />
            <Setter Property="GridLinesVisibility" Value="None" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="RowHeight" Value="35" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="White" />
            <Setter Property="EnableRowVirtualization" Value="True" />
            <Setter Property="EnableColumnVirtualization" Value="True" />
            <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True" />
            <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling" />
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Setter Property="Padding" Value="8" />
                        <Setter Property="BorderBrush" Value="#E0E0E0" />
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="#F5F7FA" />
                        <Setter Property="Foreground" Value="#2D3748" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="Padding" Value="8" />
                        <Setter Property="BorderThickness" Value="0,0,0,0" />
                        <Setter Property="BorderBrush" Value="#E0E7FF" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F5F7FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header Section  -->
        <Grid Grid.Row="0" Margin="20,20,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                FontSize="24"
                FontWeight="Bold"
                Foreground="#2D3748"
                Style="{StaticResource MaterialDesignHeadline6TextBlock}">
                <Run Text="Quản lý tồn kho" />
                <Run Text="(" />
                <Run Text="{Binding ApplicableLocation}" />
                <Run Text=")" />
            </TextBlock>
            <TextBlock
                Grid.Column="1"
                Margin="0,0,20,0"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Foreground="#2D3748"
                Style="{StaticResource MaterialDesignHeadline6TextBlock}">
                <Run Text="Tổng giá trị kho:" />
                <Run Text="{Binding TotalPriceWarehouse, StringFormat={}{0:N0}}" />
                <Run Text="VNĐ" />
            </TextBlock>

            <ToggleButton
                Grid.Column="2"
                Margin="0,0,20,0"
                IsChecked="{Binding ViewMode, Converter={StaticResource BoolToViewModeConverter}, Mode=TwoWay}"
                Style="{StaticResource iOSSwitchToggleStyle}" />
        </Grid>

        <!--  Filters and DataGrid/Visual Grid Section  -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Filters  -->
            <StackPanel
                Grid.Row="0"
                Margin="0,0,0,10"
                Visibility="{Binding ViewMode, Converter={StaticResource IndexToVisibilityConverter}, ConverterParameter=0}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        Padding="8"
                        materialDesign:HintAssist.Hint="Tìm kiếm sản phẩm ..."
                        Foreground="#A0AEC0"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                    <TabControl
                        Grid.Column="1"
                        Margin="10,0,10,0"
                        SelectedIndex="{Binding SelectedCategoryIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <TabControl.ItemsSource>
                            <Binding Path="Categories" />
                        </TabControl.ItemsSource>
                        <TabControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding CategoryName}" />
                            </DataTemplate>
                        </TabControl.ItemTemplate>
                        <TabControl.ContentTemplate>
                            <DataTemplate>
                                <Grid />
                            </DataTemplate>
                        </TabControl.ContentTemplate>
                    </TabControl>
                    <Button
                        Grid.Column="2"
                        Command="{Binding SearchCommand}"
                        Style="{StaticResource FilterButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Foreground="#4B5EAA"
                                Kind="Search" />
                            <TextBlock
                                VerticalAlignment="Center"
                                Foreground="#2D3748"
                                Text="Tìm kiếm" />
                        </StackPanel>
                    </Button>
                    <Button
                        Grid.Column="3"
                        Command="{Binding ExportExcelCommand}"
                        Style="{StaticResource FilterButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Foreground="#4B5EAA"
                                Kind="MicrosoftExcel" />
                            <TextBlock
                                VerticalAlignment="Center"
                                Foreground="#2D3748"
                                Text="Xuất báo cáo" />
                        </StackPanel>
                    </Button>
                    <Button
                        Grid.Column="4"
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource FilterButtonStyle}"
                        ToolTip="Làm mới">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                VerticalAlignment="Center"
                                Foreground="#4B5EAA"
                                Kind="Refresh" />
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>

            <!--  DataGrid or Visual Grid  -->
            <Grid Grid.Row="1">
                <!--  DataGrid for Physical View  -->
                <DataGrid
                    x:Name="PhysicalDataGrid"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding InventoryList, UpdateSourceTrigger=PropertyChanged}"
                    SelectionMode="Single"
                    Style="{StaticResource ModernDataGridStyle}"
                    VirtualizingPanel.IsVirtualizing="True"
                    Visibility="{Binding ViewMode, Converter={StaticResource IndexToVisibilityConverter}, ConverterParameter=0}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding ViewDetailCommand}" CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="1.5*"
                            Binding="{Binding ProductCode}"
                            Header="Mã sản phẩm" />
                        <DataGridTextColumn
                            Width="3*"
                            Binding="{Binding ProductName}"
                            Header="Tên sản phẩm" />
                        <DataGridTextColumn
                            Width="2*"
                            Binding="{Binding CategoryName}"
                            Header="Danh mục" />
                        <DataGridTextColumn
                            Width="100"
                            Binding="{Binding BaseQuantity, StringFormat={}{0:N2}}"
                            Header="Số lượng cơ bản">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn
                            Width="1*"
                            Binding="{Binding BaseUOM}"
                            Header="Đơn vị cơ bản" />
                        <DataGridTextColumn
                            Width="130"
                            Binding="{Binding Quantity}"
                            Header="Số lượng ">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn
                            Width="1*"
                            Binding="{Binding UOM}"
                            Header="Đơn vị" />
                        <DataGridTextColumn
                            Width="1*"
                            Binding="{Binding TotalPrice, StringFormat={}{0:N0}}"
                            Header="Tổng giá trị" />
                    </DataGrid.Columns>
                </DataGrid>

                <!--  Visual Grid for Trực quan View  -->
                <Grid Margin="12" Visibility="{Binding ViewMode, Converter={StaticResource IndexToVisibilityConverter}, ConverterParameter=1}">
                    <ItemsControl ItemsSource="{Binding WarehouseRegions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="8"
                                    Padding="12"
                                    Background="#FFFFFF"
                                    BorderBrush="#D1D5DB"
                                    BorderThickness="1"
                                    CornerRadius="8">

                                    <StackPanel>
                                        <TextBlock
                                            Margin="0,0,0,8"
                                            FontSize="18"
                                            FontWeight="SemiBold"
                                            Foreground="#1F2937"
                                            Text="{Binding WarehouseName}" />
                                        <ItemsControl ItemsSource="{Binding locationUsageDTOs}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <UniformGrid Columns="5" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border
                                                        Width="Auto"
                                                        Height="40"
                                                        Margin="6"
                                                        Background="#FFFFFF"
                                                        BorderBrush="#D1D5DB"
                                                        BorderThickness="1"
                                                        CornerRadius="6"
                                                        Cursor="Hand">
                                                        <Border.Triggers>
                                                            <EventTrigger RoutedEvent="MouseEnter">
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <ColorAnimation
                                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                            To="#F9FAFB"
                                                                            Duration="0:0:0.2" />
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </EventTrigger>
                                                            <EventTrigger RoutedEvent="MouseLeave">
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <ColorAnimation
                                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                            To="#FFFFFF"
                                                                            Duration="0:0:0.2" />
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </EventTrigger>
                                                        </Border.Triggers>

                                                        <Border.Effect>
                                                            <DropShadowEffect
                                                                BlurRadius="6"
                                                                Opacity="0.15"
                                                                ShadowDepth="1"
                                                                Color="#000000" />
                                                        </Border.Effect>

                                                        <!--  Progress bar full height + text overlay  -->
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>

                                                            <!--  LocationCode bên trái có đường kẻ  -->
                                                            <Border
                                                                Grid.Column="0"
                                                                Padding="8,0"
                                                                VerticalAlignment="Center"
                                                                BorderBrush="#E5E7EB"
                                                                BorderThickness="0,0,1,0">
                                                                <TextBlock
                                                                    FontSize="13"
                                                                    FontWeight="SemiBold"
                                                                    Foreground="Black"
                                                                    Text="{Binding LocationCode}" />
                                                            </Border>

                                                            <!--  Phần progress bar + phần trăm nằm bên phải  -->
                                                            <Grid Grid.Column="1" VerticalAlignment="Center">
                                                                <!--  Thanh progress  -->
                                                                <Rectangle
                                                                    Width="{Binding UsedPercentage, Converter={StaticResource PercentageToWidthConverter}, ConverterParameter=150}"
                                                                    Height="60"
                                                                    HorizontalAlignment="Left"
                                                                    Fill="{Binding UsedPercentage, Converter={StaticResource PercentageToColorConverter}}">
                                                                    <Rectangle.ToolTip>
                                                                        <StackPanel>
                                                                            <TextBlock Text="{Binding LocationName}" />
                                                                            <TextBlock>
                                                                                <Run Text="Tổng số lượng: " />
                                                                                <Run Text="{Binding Quantity}" />
                                                                            </TextBlock>
                                                                        </StackPanel>
                                                                    </Rectangle.ToolTip>
                                                                </Rectangle>

                                                                <!--  Text phần trăm ở giữa progress  -->
                                                                <TextBlock
                                                                    Margin="8,0"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    FontSize="13"
                                                                    FontWeight="SemiBold"
                                                                    Foreground="Black"
                                                                    Text="{Binding UsedPercentage, StringFormat={}{0:N2}%}" />
                                                            </Grid>
                                                        </Grid>

                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Grid>

            <!--  Pagination  -->
            <StackPanel
                Grid.Row="2"
                Margin="0,10,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Width="40"
                    Height="40"
                    Command="{Binding PreviousPageCommand}"
                    Style="{StaticResource MaterialDesignIconButton}"
                    ToolTip="Trang trước">
                    <materialDesign:PackIcon
                        Width="20"
                        Height="20"
                        Kind="ArrowLeft" />
                </Button>
                <ItemsControl ItemsSource="{Binding DisplayPages}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplateSelector>
                        <StaticResource ResourceKey="PageItemTemplateSelector" />
                    </ItemsControl.ItemTemplateSelector>
                </ItemsControl>
                <Button
                    Width="40"
                    Height="40"
                    Command="{Binding NextPageCommand}"
                    Style="{StaticResource MaterialDesignIconButton}"
                    ToolTip="Trang sau">
                    <materialDesign:PackIcon
                        Width="20"
                        Height="20"
                        Kind="ArrowRight" />
                </Button>
            </StackPanel>

            <!--  Snackbar  -->
            <materialDesign:Snackbar
                x:Name="InventorySnackbar"
                Grid.Row="2"
                Width="Auto"
                Margin="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                MessageQueue="{materialDesign:MessageQueue}" />
        </Grid>
    </Grid>
</UserControl>