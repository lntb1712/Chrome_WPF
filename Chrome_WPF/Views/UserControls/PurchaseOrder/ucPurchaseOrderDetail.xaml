<UserControl
    x:Class="Chrome_WPF.Views.UserControls.PurchaseOrder.ucPurchaseOrderDetail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Chrome_WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="clr-namespace:Chrome_WPF.Helpers"
    xmlns:local="clr-namespace:Chrome_WPF.Views.UserControls.PurchaseOrder"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!--  Converters  -->
        <converters:PageEqualityConverter x:Key="PageEqualityConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:StringToDateTimeConverter x:Key="StringToDateTimeConverter" />

        <!--  Styles  -->
        <SolidColorBrush x:Key="BorderNormalColor" Color="#E0E0E0" />
        <Style x:Key="ModernDataGridStyle" TargetType="{x:Type DataGrid}">
            <Setter Property="RowBackground" Value="White" />
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5" />
            <Setter Property="GridLinesVisibility" Value="None" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="RowHeight" Value="35" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="White" />
            <Setter Property="EnableRowVirtualization" Value="True" />
            <Setter Property="EnableColumnVirtualization" Value="True" />
            <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True" />
            <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling" />
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Setter Property="Padding" Value="8" />
                        <Setter Property="BorderBrush" Value="{StaticResource BorderNormalColor}" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="#F5F7FA" />
                        <Setter Property="Foreground" Value="#2D3748" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="Padding" Value="8" />
                        <Setter Property="BorderThickness" Value="0,0,0,0" />
                        <Setter Property="BorderBrush" Value="#E0E7FF" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        <helper:PageItemTemplateSelector x:Key="PageItemTemplateSelector">
            <helper:PageItemTemplateSelector.PageNumberTemplate>
                <DataTemplate>
                    <Button
                        Width="40"
                        Height="40"
                        Margin="5,0"
                        Command="{Binding DataContext.SelectPageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding}"
                        Content="{Binding}"
                        ToolTip="{Binding}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource MaterialDesignIconButton}" TargetType="Button">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
                                <Style.Triggers>
                                    <DataTrigger Value="True">
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource PageEqualityConverter}">
                                                <Binding Path="." />
                                                <Binding Path="DataContext.CurrentPage" />
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <Setter Property="Background" Value="White" />
                                        <Setter Property="Foreground" Value="Black" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </DataTemplate>
            </helper:PageItemTemplateSelector.PageNumberTemplate>
            <helper:PageItemTemplateSelector.EllipsisTemplate>
                <DataTemplate>
                    <TextBlock
                        Width="40"
                        Height="40"
                        Margin="5,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Text="..." />
                </DataTemplate>
            </helper:PageItemTemplateSelector.EllipsisTemplate>
        </helper:PageItemTemplateSelector>
    </UserControl.Resources>

    <Grid Background="#F5F7FA">
        <materialDesign:Card
            Margin="16,8,16,16"
            Padding="24"
            materialDesign:ElevationAssist.Elevation="Dp6"
            Background="White"
            UniformCornerRadius="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Header  -->
                <Grid Grid.Row="0" Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            x:Name="BackButton"
                            Height="36"
                            HorizontalAlignment="Left"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            Background="Transparent"
                            Command="{Binding BackCommand}"
                            Foreground="#2D3748"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="Quay lại danh sách đơn đặt hàng">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="24"
                                    Height="24"
                                    Kind="ArrowLeft" />
                            </StackPanel>
                        </Button>
                        <TextBlock
                            Margin="10,0,0,0"
                            FontSize="24"
                            FontWeight="Bold"
                            Text="Chi tiết đơn đặt hàng" />
                        <TextBlock
                            Margin="10,0,0,0"
                            FontSize="24"
                            FontWeight="Bold"
                            Text="{Binding PurchaseOrderRequestDTO.PurchaseOrderCode}" />
                    </StackPanel>
                    <Button
                        x:Name="ExportExcelButton"
                        Grid.Column="2"
                        Margin="0,0,20,0"
                        materialDesign:ButtonAssist.CornerRadius="8"
                        Background="AliceBlue"
                        Command="{Binding ExportExcelCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        ToolTip="Xuất excel">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                Margin="0,0,10,0"
                                Kind="FileExcel" />
                            <TextBlock VerticalAlignment="Center" Text="Xuất excel" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="SaveButton"
                        Grid.Column="3"
                        Margin="0,0,20,0"
                        materialDesign:ButtonAssist.CornerRadius="8"
                        Background="AliceBlue"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        ToolTip="Lưu">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                Margin="0,0,10,0"
                                Kind="ContentSave" />
                            <TextBlock VerticalAlignment="Center" Text="Lưu" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="ConfirmButton"
                        Grid.Column="4"
                        materialDesign:ButtonAssist.CornerRadius="8"
                        Background="AliceBlue"
                        Command="{Binding ConfirmQuantityCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        ToolTip="Xác nhận hoàn thành">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                Margin="0,0,10,0"
                                Kind="CheckCircle" />
                            <TextBlock VerticalAlignment="Center" Text="Xác nhận hoàn thành" />
                        </StackPanel>
                    </Button>
                </Grid>

                <!--  General Information  -->
                <Grid Grid.Row="1" Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="0.7*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,10,0,16"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="120"
                            VerticalAlignment="Center"
                            Text="Mã đơn đặt hàng" />
                        <TextBox
                            x:Name="PurchaseOrderCodeTextBox"
                            Width="250"
                            Margin="8,0,0,0"
                            Padding="12,8"
                            materialDesign:HintAssist.Hint="Nhập mã đơn đặt hàng"
                            materialDesign:HintAssist.IsFloating="True"
                            materialDesign:TextFieldAssist.HasLeadingIcon="True"
                            materialDesign:TextFieldAssist.LeadingIcon="CodeTags"
                            FontSize="14"
                            IsEnabled="False">
                            <TextBox.Text>
                                <Binding
                                    Path="PurchaseOrderRequestDTO.PurchaseOrderCode"
                                    UpdateSourceTrigger="PropertyChanged"
                                    ValidatesOnDataErrors="True"
                                    ValidatesOnNotifyDataErrors="True" />
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,10,0,16"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="120"
                            VerticalAlignment="Center"
                            Text="Kho" />
                        <ComboBox
                            x:Name="WarehouseComboBox"
                            Width="250"
                            Margin="8,0,0,0"
                            Padding="12,8"
                            materialDesign:HintAssist.Hint="Chọn kho"
                            materialDesign:HintAssist.IsFloating="True"
                            FontSize="14"
                            ItemsSource="{Binding LstWarehouses}"
                            SelectedValue="{Binding PurchaseOrderRequestDTO.WarehouseCode, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"
                            SelectedValuePath="WarehouseCode">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="{Binding WarehouseCode}" />
                                        <Run Text=" - " />
                                        <Run Text="{Binding WarehouseName}" />
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,10,0,16"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="120"
                            VerticalAlignment="Center"
                            Text="Ngày đặt hàng" />
                        <DatePicker
                            x:Name="OrderDatePicker"
                            Width="250"
                            Margin="8,0,0,0"
                            Padding="12,8"
                            materialDesign:HintAssist.Hint="Chọn ngày đặt hàng"
                            materialDesign:HintAssist.IsFloating="True"
                            FontSize="14"
                            SelectedDate="{Binding PurchaseOrderRequestDTO.OrderDate, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True, Converter={StaticResource StringToDateTimeConverter}}" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="0,10,0,16"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="120"
                            VerticalAlignment="Center"
                            Text="Nhà cung cấp" />
                        <ComboBox
                            x:Name="SupplierComboBox"
                            Width="250"
                            Margin="8,0,0,0"
                            Padding="12,8"
                            materialDesign:HintAssist.Hint="Chọn nhà cung cấp"
                            materialDesign:HintAssist.IsFloating="True"
                            FontSize="14"
                            ItemsSource="{Binding LstSuppliers}"
                            SelectedValue="{Binding PurchaseOrderRequestDTO.SupplierCode, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"
                            SelectedValuePath="SupplierCode">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="{Binding SupplierCode}" />
                                        <Run Text=" - " />
                                        <Run Text="{Binding SupplierName}" />
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,10,0,16"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="120"
                            VerticalAlignment="Center"
                            Text="Ngày dự kiến" />
                        <DatePicker
                            x:Name="ExpectedDatePicker"
                            Width="250"
                            Margin="8,0,0,0"
                            Padding="12,8"
                            materialDesign:HintAssist.Hint="Chọn ngày dự kiến"
                            materialDesign:HintAssist.IsFloating="True"
                            FontSize="14"
                            SelectedDate="{Binding PurchaseOrderRequestDTO.ExpectedDate, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True, Converter={StaticResource StringToDateTimeConverter}}" />
                    </StackPanel>
                    <materialDesign:Card
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        Grid.Column="2"
                        Margin="0,10,0,16"
                        Padding="16"
                        BorderBrush="Black"
                        BorderThickness="2">
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Mô tả đơn đặt hàng" />
                            <TextBox
                                x:Name="PurchaseOrderDescriptionTextBox"
                                Width="Auto"
                                Height="100"
                                Padding="12,8"
                                materialDesign:TextFieldAssist.DecorationVisibility="Visible"
                                materialDesign:TextFieldAssist.HasLeadingIcon="True"
                                materialDesign:TextFieldAssist.IconVerticalAlignment="Top"
                                materialDesign:TextFieldAssist.LeadingIcon="Text"
                                AcceptsReturn="True"
                                FontSize="14"
                                TextWrapping="Wrap">
                                <TextBox.Text>
                                    <Binding
                                        Path="PurchaseOrderRequestDTO.PurchaseOrderDescription"
                                        UpdateSourceTrigger="PropertyChanged"
                                        ValidatesOnDataErrors="True"
                                        ValidatesOnNotifyDataErrors="True" />
                                </TextBox.Text>
                            </TextBox>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>

                <!--  Purchase Order Details Section  -->
                <Grid Grid.Row="2" Visibility="{Binding IsAddingNew, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Collapsed}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <DataGrid
                        x:Name="PurchaseOrderDetailDataGrid"
                        Grid.Row="0"
                        Margin="0,8,0,16"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="True"
                        IsReadOnly="False"
                        ItemsSource="{Binding LstPurchaseOrderDetails, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource ModernDataGridStyle}">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="2*" Header="Sản phẩm">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox
                                            DisplayMemberPath="ProductName"
                                            ItemsSource="{Binding DataContext.LstProducts, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            SelectedItem="{Binding SelectedProduct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            SelectedValuePath="ProductCode" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Quantity}"
                                Header="Số lượng yêu cầu" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding QuantityReceived}"
                                Header="Số lượng thực nhận" />
                            <DataGridTemplateColumn Width="80" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Command="{Binding DataContext.DeleteDetailLineCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            ToolTip="Xóa dòng">
                                            <materialDesign:PackIcon
                                                Width="20"
                                                Height="20"
                                                Kind="Delete" />
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button
                        Grid.Row="1"
                        Margin="0,0,0,8"
                        Padding="8,4"
                        HorizontalAlignment="Left"
                        Command="{Binding AddDetailLineCommand}"
                        Content="Thêm dòng"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        ToolTip="Thêm chi tiết đơn đặt hàng mới" />
                    <StackPanel
                        Grid.Row="2"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                        <Button
                            Width="40"
                            Height="40"
                            Command="{Binding PreviousPageCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Trang trước">
                            <materialDesign:PackIcon
                                Width="20"
                                Height="20"
                                Kind="ArrowLeft" />
                        </Button>
                        <ItemsControl ItemsSource="{Binding DisplayPages}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplateSelector>
                                <StaticResource ResourceKey="PageItemTemplateSelector" />
                            </ItemsControl.ItemTemplateSelector>
                        </ItemsControl>
                        <Button
                            Width="40"
                            Height="40"
                            Command="{Binding NextPageCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Trang sau">
                            <materialDesign:PackIcon
                                Width="20"
                                Height="20"
                                Kind="ArrowRight" />
                        </Button>
                    </StackPanel>
                </Grid>

                <!--  Snackbar  -->
                <materialDesign:Snackbar
                    x:Name="PurchaseOrderDetailSnackbar"
                    Grid.Row="3"
                    Width="Auto"
                    Margin="16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    MessageQueue="{materialDesign:MessageQueue}" />
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>