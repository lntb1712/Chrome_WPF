<UserControl
    x:Class="Chrome_WPF.Views.UserControls.CustomerMaster.ucCustomerEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Chrome_WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:Chrome_WPF.Helpers"
    xmlns:local="clr-namespace:Chrome_WPF.Views.UserControls.CustomerMaster"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Background="#F5F7FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button
            x:Name="BackButton"
            Width="150"
            Height="36"
            Margin="16,16,0,0"
            HorizontalAlignment="Left"
            materialDesign:ButtonAssist.CornerRadius="8"
            Background="#E2E8F0"
            Click="BackButton_Click"
            Foreground="#2D3748"
            Style="{StaticResource MaterialDesignFlatButton}">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon
                    Width="24"
                    Height="24"
                    Margin="0,0,10,0"
                    Kind="Backburger" />
                <TextBlock VerticalAlignment="Center" Text="Quay lại" />
            </StackPanel>
        </Button>
        <!--  Card Editor  -->
        <materialDesign:Card
            Grid.Row="1"
            Width="700"
            Margin="16,8,16,16"
            Padding="24"
            materialDesign:ElevationAssist.Elevation="Dp6"
            Background="White"
            UniformCornerRadius="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Margin="0,0,0,24"
                    HorizontalAlignment="Center"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Foreground="#1A202C"
                    Text="Thông tin khách hàng" />
                <TextBox
                    x:Name="CustomerCodeTextBox"
                    Grid.Row="1"
                    Margin="0,8,8,24"
                    Padding="12,8"
                    materialDesign:HintAssist.Hint="Mã khách hàng"
                    materialDesign:HintAssist.IsFloating="True"
                    materialDesign:TextFieldAssist.HasLeadingIcon="True"
                    materialDesign:TextFieldAssist.LeadingIcon="IdCard"
                    FontSize="14"
                    IsEnabled="{Binding IsAddingNew}">
                    <TextBox.Text>
                        <Binding
                            Path="CustomerMasterRequestDTO.CustomerCode"
                            UpdateSourceTrigger="LostFocus"
                            ValidatesOnDataErrors="True"
                            ValidatesOnNotifyDataErrors="True" />
                    </TextBox.Text>
                </TextBox>
                <TextBox
                    x:Name="CustomerNameTextBox"
                    Grid.Row="2"
                    Margin="0,8,8,24"
                    Padding="12,8"
                    materialDesign:HintAssist.Hint="Tên khách hàng"
                    materialDesign:HintAssist.IsFloating="True"
                    materialDesign:TextFieldAssist.HasLeadingIcon="True"
                    materialDesign:TextFieldAssist.LeadingIcon="Account"
                    FontSize="14"
                    IsEnabled="True">
                    <TextBox.Text>
                        <Binding
                            Path="CustomerMasterRequestDTO.CustomerName"
                            UpdateSourceTrigger="LostFocus"
                            ValidatesOnDataErrors="True"
                            ValidatesOnNotifyDataErrors="True" />
                    </TextBox.Text>
                </TextBox>
                <TextBox
                    x:Name="CustomerPhoneTextBox"
                    Grid.Row="3"
                    Margin="0,8,8,24"
                    Padding="12,8"
                    materialDesign:HintAssist.Hint="Số điện thoại"
                    materialDesign:HintAssist.IsFloating="True"
                    materialDesign:TextFieldAssist.HasLeadingIcon="True"
                    materialDesign:TextFieldAssist.LeadingIcon="Phone"
                    FontSize="14"
                    IsEnabled="True">
                    <TextBox.Text>
                        <Binding
                            Path="CustomerMasterRequestDTO.CustomerPhone"
                            UpdateSourceTrigger="LostFocus"
                            ValidatesOnDataErrors="True"
                            ValidatesOnNotifyDataErrors="True" />
                    </TextBox.Text>
                </TextBox>
                <TextBox
                    x:Name="CustomerAddressTextBox"
                    Grid.Row="4"
                    Margin="0,8,8,24"
                    Padding="12,8"
                    materialDesign:HintAssist.Hint="Địa chỉ"
                    materialDesign:HintAssist.IsFloating="True"
                    materialDesign:TextFieldAssist.HasLeadingIcon="True"
                    materialDesign:TextFieldAssist.LeadingIcon="MapMarker"
                    AcceptsReturn="True"
                    FontSize="14"
                    IsEnabled="True"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto">
                    <TextBox.Text>
                        <Binding
                            Path="CustomerMasterRequestDTO.CustomerAddress"
                            UpdateSourceTrigger="LostFocus"
                            ValidatesOnDataErrors="True"
                            ValidatesOnNotifyDataErrors="True" />
                    </TextBox.Text>
                </TextBox>
                <TextBox
                    x:Name="CustomerEmailTextBox"
                    Grid.Row="5"
                    Margin="0,8,8,24"
                    Padding="12,8"
                    materialDesign:HintAssist.Hint="Email"
                    materialDesign:HintAssist.IsFloating="True"
                    materialDesign:TextFieldAssist.HasLeadingIcon="True"
                    materialDesign:TextFieldAssist.LeadingIcon="Email"
                    FontSize="14"
                    IsEnabled="True">
                    <TextBox.Text>
                        <Binding
                            Path="CustomerMasterRequestDTO.CustomerEmail"
                            UpdateSourceTrigger="LostFocus"
                            ValidatesOnDataErrors="True"
                            ValidatesOnNotifyDataErrors="True" />
                    </TextBox.Text>
                </TextBox>
                <Button
                    Grid.Row="6"
                    Width="120"
                    Height="40"
                    Margin="0,16,0,0"
                    HorizontalAlignment="Center"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    Background="#3182CE"
                    Command="{Binding SaveCommand}"
                    Content="Lưu"
                    FontWeight="Medium"
                    Foreground="White"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
                <materialDesign:Snackbar
                    x:Name="CustomerEditorSnackbar"
                    Grid.Row="7"
                    Width="Auto"
                    Margin="16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    MessageQueue="{materialDesign:MessageQueue}" />
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>