<UserControl
    x:Class="Chrome_WPF.Views.UserControls.Replenish.ucReplenish"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Chrome_WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="clr-namespace:Chrome_WPF.Helpers"
    xmlns:local="clr-namespace:Chrome_WPF.Views.UserControls.Replenish"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:PageEqualityConverter x:Key="PageEqualityConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <SolidColorBrush x:Key="BorderNormalColor" Color="#E0E0E0" />
        <Style x:Key="ModernDataGridStyle" TargetType="{x:Type DataGrid}">
            <Setter Property="RowBackground" Value="White" />
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5" />
            <Setter Property="GridLinesVisibility" Value="None" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="RowHeight" Value="35" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="White" />
            <Setter Property="EnableRowVirtualization" Value="True" />
            <Setter Property="EnableColumnVirtualization" Value="True" />
            <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True" />
            <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling" />
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Setter Property="Padding" Value="8" />
                        <Setter Property="BorderBrush" Value="{StaticResource BorderNormalColor}" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="#F5F7FA" />
                        <Setter Property="Foreground" Value="#2D3748" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="Padding" Value="8" />
                        <Setter Property="BorderThickness" Value="0,0,0,0" />
                        <Setter Property="BorderBrush" Value="#E0E7FF" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        <helper:PageItemTemplateSelector x:Key="PageItemTemplateSelector">
            <helper:PageItemTemplateSelector.PageNumberTemplate>
                <DataTemplate>
                    <Button
                        Width="40"
                        Height="40"
                        Margin="5,0"
                        Command="{Binding DataContext.SelectPageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding}"
                        Content="{Binding}"
                        ToolTip="{Binding}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource MaterialDesignIconButton}" TargetType="Button">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
                                <Style.Triggers>
                                    <DataTrigger Value="True">
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource PageEqualityConverter}">
                                                <Binding Path="." />
                                                <Binding Path="DataContext.CurrentPage" />
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <Setter Property="Background" Value="White" />
                                        <Setter Property="Foreground" Value="Black" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </DataTemplate>
            </helper:PageItemTemplateSelector.PageNumberTemplate>
            <helper:PageItemTemplateSelector.EllipsisTemplate>
                <DataTemplate>
                    <TextBlock
                        Width="40"
                        Height="40"
                        Margin="5,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Text="..." />
                </DataTemplate>
            </helper:PageItemTemplateSelector.EllipsisTemplate>
        </helper:PageItemTemplateSelector>
    </UserControl.Resources>
    <Grid Background="#F5F7FA">
        <materialDesign:Card
            Margin="16,8,16,0"
            Padding="24"
            materialDesign:ElevationAssist.Elevation="Dp6"
            Background="White"
            UniformCornerRadius="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <!--  Header  -->
                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock
                            Margin="10,0,0,0"
                            FontSize="24"
                            FontWeight="Bold"
                            Text="{Binding ApplicableWarehouseCodes, StringFormat='Quy tắc bổ sung hàng - {0}'}" />
                    </StackPanel>
                    <Button
                        Grid.Column="2"
                        materialDesign:ButtonAssist.CornerRadius="8"
                        Background="AliceBlue"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        ToolTip="Lưu">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                Margin="0,0,10,0"
                                Kind="ContentSave" />
                            <TextBlock VerticalAlignment="Center" Text="Lưu" />
                        </StackPanel>
                    </Button>
                </Grid>
                <!--  Search Bar  -->
                <Grid Grid.Row="1" Margin="0,8,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Column="0"
                        Margin="0,0,8,0"
                        Padding="8"
                        materialDesign:HintAssist.Hint="Tìm kiếm theo mã kho, tên kho, mã sản phẩm hoặc tên sản phẩm"
                        FontSize="14"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" />
                    <Button
                        Grid.Column="1"
                        Margin="0,0,8,0"
                        Command="{Binding SearchCommand}"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Tìm kiếm">
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            Kind="Magnify" />
                    </Button>
                    <Button
                        Grid.Column="2"
                        Command="{Binding ClearSearchCommand}"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Xóa tìm kiếm"
                        Visibility="{Binding SearchQuery, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=NotEmpty}">
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            Kind="Close" />
                    </Button>
                </Grid>
                <!--  DataGrid and Pagination  -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <DataGrid
                        x:Name="ReplenishDataGrid"
                        Grid.Row="0"
                        Margin="0,8,0,16"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="True"
                        ItemsSource="{Binding LstReplenishRules, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource ModernDataGridStyle}">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="*" Header="Sản phẩm">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox
                                            Padding="1"
                                            VerticalContentAlignment="Center"
                                            IsEditable="False"
                                            ItemsSource="{Binding DataContext.AvailableProducts, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            SelectedItem="{Binding SelectedProduct, UpdateSourceTrigger=PropertyChanged}"
                                            SelectedValue="{Binding ProductCode, UpdateSourceTrigger=PropertyChanged}"
                                            SelectedValuePath="ProductCode">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock>
                                                        <Run Text="{Binding ProductCode}" />
                                                        <Run Text=" - " />
                                                        <Run Text="{Binding ProductName}" />
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding MinQuantity, UpdateSourceTrigger=PropertyChanged}"
                                Header="Số lượng tối thiểu" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding MaxQuantity, UpdateSourceTrigger=PropertyChanged}"
                                Header="Số lượng tối đa" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding TotalOnHand, UpdateSourceTrigger=PropertyChanged}"
                                Header="Tổng tồn kho"
                                IsReadOnly="True" />
                            <DataGridTemplateColumn Width="80" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Command="{Binding DataContext.DeleteReplenishRuleLineCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            ToolTip="Xóa dòng">
                                            <materialDesign:PackIcon
                                                Width="20"
                                                Height="20"
                                                Kind="Delete" />
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid Grid.Row="1" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Grid.Column="0"
                            Padding="8,4"
                            HorizontalAlignment="Left"
                            Command="{Binding AddReplenishRuleLineCommand}"
                            Content="Thêm dòng"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="Thêm quy tắc bổ sung mới" />
                    </Grid>
                    <StackPanel
                        Grid.Row="2"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                        <Button
                            Width="40"
                            Height="40"
                            Command="{Binding PreviousPageCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Trang trước">
                            <materialDesign:PackIcon
                                Width="20"
                                Height="20"
                                Kind="ArrowLeft" />
                        </Button>
                        <ItemsControl ItemsSource="{Binding DisplayPages}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplateSelector>
                                <StaticResource ResourceKey="PageItemTemplateSelector" />
                            </ItemsControl.ItemTemplateSelector>
                        </ItemsControl>
                        <Button
                            Width="40"
                            Height="40"
                            Command="{Binding NextPageCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Trang sau">
                            <materialDesign:PackIcon
                                Width="20"
                                Height="20"
                                Kind="ArrowRight" />
                        </Button>
                    </StackPanel>
                </Grid>
                <!--  Snackbar  -->
                <materialDesign:Snackbar
                    x:Name="ReplenishSnackbar"
                    Grid.Row="3"
                    Width="Auto"
                    Margin="16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    MessageQueue="{materialDesign:MessageQueue}" />
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>