<UserControl
    x:Class="Chrome_WPF.ViewModels.ManufacturingOrderViewModel.ucForecastManufacturingTooltip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chrome_WPF.ViewModels.ManufacturingOrderViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <TextBlock FontWeight="SemiBold" Text="Dự báo chi tiết sản xuất" />
            <Separator Margin="0,5" />
            <TextBlock>
                <Run Text="Sản phẩm: " />
                <Run Text="{Binding ProductName}" />
            </TextBlock>
            <TextBlock>
                <Run Text="Số lượng tồn kho: " />
                <Run Text="{Binding ForecastData.QuantityOnHand}" />
            </TextBlock>
            <TextBlock>
                <Run Text="Số lượng tiêu thụ dự kiến: " />
                <Run Text="{Binding ForecastData.QuantityToOutBound}" />
            </TextBlock>
            <TextBlock>
                <Run Text="Số lượng nhận dự kiến: " />
                <Run Text="{Binding ForecastData.QuantityToInBound}" />
            </TextBlock>
            <Separator Margin="0,5" />
            <TextBlock>
                <Run Text="Số lượng khả thi (dự báo): " />
                <Run Text="{Binding ForecastData.AvailableQty}" />
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
