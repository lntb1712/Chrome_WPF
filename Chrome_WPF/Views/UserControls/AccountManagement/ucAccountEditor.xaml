<UserControl
    x:Class="Chrome_WPF.Views.UserControls.AccountManagement.ucAccountEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Chrome_WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:Chrome_WPF.Helpers"
    xmlns:local="clr-namespace:Chrome_WPF.Views.UserControls.AccountManagement"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Background="#F5F7FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button
            x:Name="BackButton"
            Width="150"
            Height="36"
            Margin="16,16,0,8"
            HorizontalAlignment="Left"
            materialDesign:ButtonAssist.CornerRadius="8"
            Background="#E2E8F0"
            Click="BackButton_Click"
            Foreground="#2D3748"
            Style="{StaticResource MaterialDesignFlatButton}">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon
                    Width="24"
                    Height="24"
                    Margin="0,0,10,0"
                    Kind="Backburger" />
                <TextBlock VerticalAlignment="Center" Text="Quay lại" />
            </StackPanel>
        </Button>

        <materialDesign:Card
            Grid.Row="1"
            Width="600"
            Height="600"
            Margin="16,8,16,16"
            Padding="24"
            materialDesign:ElevationAssist.Elevation="Dp6"
            Background="White"
            UniformCornerRadius="16">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,24"
                    HorizontalAlignment="Center"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Foreground="#1A202C"
                    Text="Thông tin người dùng" />

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBox
                        x:Name="UserNameTextBox"
                        Grid.Row="0"
                        Margin="0,8,8,24"
                        Padding="12,8"
                        materialDesign:HintAssist.Hint="Tên đăng nhập"
                        materialDesign:HintAssist.IsFloating="True"
                        materialDesign:TextFieldAssist.HasLeadingIcon="True"
                        materialDesign:TextFieldAssist.LeadingIcon="Account"
                        FontSize="14"
                        IsEnabled="{Binding IsAddingNew}">
                        <TextBox.Text>

                            <Binding
                                Path="AccountManagementRequestDTO.UserName"
                                UpdateSourceTrigger="LostFocus"
                                ValidatesOnDataErrors="True"
                                ValidatesOnNotifyDataErrors="True" />
                        </TextBox.Text>
                    </TextBox>
                    <PasswordBox
                        x:Name="PasswordField"
                        Grid.Row="1"
                        Margin="0,8,8,24"
                        Padding="12,8"
                        helpers:BindablePasswordBoxBehavior.BoundPassword="{Binding AccountManagementRequestDTO.Password, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
                        materialDesign:HintAssist.Hint="Mật khẩu"
                        materialDesign:HintAssist.IsFloating="True"
                        materialDesign:TextFieldAssist.HasLeadingIcon="True"
                        materialDesign:TextFieldAssist.LeadingIcon="Lock"
                        FontSize="14"
                        PasswordChanged="PasswordField_PasswordChanged" />


                    <TextBox
                        x:Name="FullNameTextBox"
                        Grid.Row="2"
                        Margin="0,8,8,24"
                        Padding="12,8"
                        materialDesign:HintAssist.Hint="Tên đầy đủ"
                        materialDesign:HintAssist.IsFloating="True"
                        materialDesign:TextFieldAssist.HasLeadingIcon="True"
                        materialDesign:TextFieldAssist.LeadingIcon="AccountCircle"
                        FontSize="14">
                        <TextBox.Text>
                            <Binding
                                Path="AccountManagementRequestDTO.FullName"
                                UpdateSourceTrigger="LostFocus"
                                ValidatesOnDataErrors="True"
                                ValidatesOnNotifyDataErrors="True" />
                        </TextBox.Text>
                    </TextBox>
                    <ComboBox
                        x:Name="cboGroup"
                        Grid.Row="3"
                        Margin="0,8,8,24"
                        Padding="12,8"
                        materialDesign:HintAssist.Hint="Nhóm người dùng"
                        materialDesign:HintAssist.IsFloating="True"
                        materialDesign:TextFieldAssist.HasLeadingIcon="True"
                        materialDesign:TextFieldAssist.LeadingIcon="Group"
                        FontSize="14"
                        ItemsSource="{Binding LstGroups}"
                        SelectedValue="{Binding AccountManagementRequestDTO.GroupID, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}"
                        SelectedValuePath="GroupId">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding GroupId}" />
                                    <Run Text=" - " />
                                    <Run Text="{Binding GroupName}" />
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>


                    <Button
                        Grid.Row="4"
                        Grid.ColumnSpan="2"
                        Width="120"
                        Height="40"
                        Margin="0,16,0,0"
                        HorizontalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Background="#3182CE"
                        Command="{Binding SaveCommand}"
                        Content="Lưu"
                        FontWeight="Medium"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignRaisedButton}" />

                    <materialDesign:Snackbar
                        x:Name="AccountEditorSnackbar"
                        Grid.Row="5"
                        Width="Auto"
                        Margin="16"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        MessageQueue="{materialDesign:MessageQueue}" />
                </Grid>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>