<UserControl
    x:Class="Chrome_WPF.Views.UserControls.BOMMaster.ucBOMPreview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Chrome_WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chrome_WPF.Views.UserControls.BOMMaster"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  Converter for TreeViewItem Level  -->
        <converters:TreeViewLevelConverter x:Key="TreeViewLevelConverter" />
        <converters:TreeViewIndentConverter x:Key="TreeViewIndentConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <!--  TreeViewItem Style  -->
        <Style TargetType="TreeViewItem">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Foreground" Value="#424242" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="IsExpanded" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <StackPanel>
                            <Border
                                x:Name="Bd"
                                Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                                <ContentPresenter
                                    x:Name="PART_Header"
                                    HorizontalAlignment="Stretch"
                                    ContentSource="Header" />
                            </Border>
                            <ItemsPresenter x:Name="ItemsHost" Margin="0" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#B0BEC5" />
                                <Setter Property="Foreground" Value="Black" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E0F7FA" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Column Header Style  -->
        <Style x:Key="ColumnHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="TextAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Background" Value="#0288D1" />
        </Style>

        <!--  Enhanced Back Button Style  -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            Effect="{StaticResource MaterialDesignShadowDepth2}">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0288D1" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#003A6D" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Enhanced Expander ToggleButton Style  -->
        <Style x:Key="ExpanderToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="28" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Margin" Value="4,0" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="50"
                            Effect="{StaticResource MaterialDesignShadowDepth1}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E0F7FA" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <materialDesign:PackIcon
                                            Width="18"
                                            Height="18"
                                            Foreground="#0288D1"
                                            Kind="ChevronDown" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <materialDesign:PackIcon
                                            Width="18"
                                            Height="18"
                                            Foreground="#424242"
                                            Kind="ChevronRight" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Margin="16"
            Background="Transparent"
            CornerRadius="8"
            Effect="{StaticResource MaterialDesignShadowDepth1}">
            <StackPanel
                Margin="16,12"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button Command="{Binding BackCommand}" Style="{StaticResource BackButtonStyle}">
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        Kind="ArrowLeft" />
                </Button>
                <TextBlock
                    Margin="12,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Black"
                    Text="Xem trước BOM" />
            </StackPanel>
        </Border>

        <!--  TreeView  -->
        <materialDesign:Card
            Grid.Row="1"
            Margin="16"
            Background="White"
            Effect="{StaticResource MaterialDesignShadowDepth2}"
            UniformCornerRadius="8">
            <StackPanel>
                <!--  Header Row  -->
                <Grid x:Name="HeaderGrid" Background="#0288D1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="28" />
                        <!--  Matches ToggleButton width  -->
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="100" />
                        <!--  Fixed width for better alignment  -->
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="1"
                        Style="{StaticResource ColumnHeaderStyle}"
                        Text="Mã sản phẩm" />
                    <TextBlock
                        Grid.Column="2"
                        Style="{StaticResource ColumnHeaderStyle}"
                        Text="Tên sản phẩm" />
                    <TextBlock
                        Grid.Column="3"
                        Style="{StaticResource ColumnHeaderStyle}"
                        Text="Phiên bản" />
                    <TextBlock
                        Grid.Column="4"
                        HorizontalAlignment="Center"
                        Style="{StaticResource ColumnHeaderStyle}"
                        Text="Số lượng" />
                </Grid>

                <!--  Data TreeView  -->
                <TreeView
                    x:Name="BOMTreeView"
                    Margin="0,8,0,0"
                    Background="Transparent"
                    BorderThickness="0"
                    ItemsSource="{Binding BOMTree}">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <Border
                                Margin="0,2"
                                HorizontalAlignment="Stretch"
                                BorderBrush="#E0E0E0"
                                BorderThickness="0,0,0,1"
                                CornerRadius="4">
                                <Grid Width="{Binding ElementName=HeaderGrid, Path=ActualWidth}" HorizontalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="28" />
                                        <!--  Matches ToggleButton width  -->
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="100" />
                                        <!--  Matches header  -->
                                    </Grid.ColumnDefinitions>

                                    <!--  ToggleButton indented to align with ComponentCode  -->
                                    <ToggleButton
                                        Grid.Column="0"
                                        Margin="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Converter={StaticResource TreeViewIndentConverter}}"
                                        IsChecked="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Path=IsExpanded}"
                                        Style="{StaticResource ExpanderToggleStyle}"
                                        Visibility="{Binding Children, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=HasItems}" />

                                    <!--  ComponentCode column: Indented with ToggleButton  -->
                                    <Grid Grid.Column="1">
                                        <TextBlock
                                            Margin="{Binding RelativeSource={RelativeSource AncestorType=TreeViewItem}, Converter={StaticResource TreeViewIndentConverter}}"
                                            Padding="12,8"
                                            VerticalAlignment="Center"
                                            Text="{Binding Data.ComponentCode}" />
                                    </Grid>

                                    <!--  Other columns: No indentation, aligned with header  -->
                                    <TextBlock
                                        Grid.Column="2"
                                        Padding="12,8"
                                        VerticalAlignment="Center"
                                        Text="{Binding Data.ComponentName}" />
                                    <TextBlock
                                        Grid.Column="3"
                                        Padding="12,8"
                                        VerticalAlignment="Center"
                                        Text="{Binding Data.BOMVersion}" />
                                    <TextBlock
                                        Grid.Column="4"
                                        Padding="12,8"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="{Binding Data.TotalQuantity}" />
                                </Grid>
                            </Border>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </StackPanel>
        </materialDesign:Card>

        <!--  Snackbar  -->
        <materialDesign:Snackbar
            x:Name="BOMPreviewSnackbar"
            Grid.Row="2"
            Margin="16,0,16,16"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Background="#0288D1"
            Foreground="White"
            MessageQueue="{materialDesign:MessageQueue}" />
    </Grid>
</UserControl>