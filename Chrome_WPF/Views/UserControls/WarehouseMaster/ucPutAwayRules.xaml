<UserControl
    x:Class="Chrome_WPF.Views.UserControls.WarehouseMaster.ucPutAwayRules"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Chrome_WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="clr-namespace:Chrome_WPF.Helpers"
    xmlns:local="clr-namespace:Chrome_WPF.Views.UserControls.WarehouseMaster"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewSelectors="clr-namespace:Chrome_WPF.ViewSelectors"
    d:DesignHeight="700"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:PageEqualityConverter x:Key="PageEqualityConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />


        <!--  Styles  -->
        <SolidColorBrush x:Key="BorderNormalColor" Color="#E0E0E0" />
        <Style x:Key="ModernDataGridStyle" TargetType="{x:Type DataGrid}">
            <Setter Property="RowBackground" Value="White" />
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5" />
            <Setter Property="GridLinesVisibility" Value="None" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="RowHeight" Value="35" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="White" />
            <Setter Property="EnableRowVirtualization" Value="True" />
            <Setter Property="EnableColumnVirtualization" Value="True" />
            <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True" />
            <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling" />
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Setter Property="Padding" Value="8" />
                        <Setter Property="BorderBrush" Value="{StaticResource BorderNormalColor}" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="#F5F7FA" />
                        <Setter Property="Foreground" Value="#2D3748" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="Padding" Value="8" />
                        <Setter Property="BorderThickness" Value="0,0,0,0" />
                        <Setter Property="BorderBrush" Value="#E0E7FF" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        <helper:PageItemTemplateSelector x:Key="PageItemTemplateSelector">
            <helper:PageItemTemplateSelector.PageNumberTemplate>
                <DataTemplate>
                    <Button
                        Width="40"
                        Height="40"
                        Margin="5,0"
                        Command="{Binding DataContext.SelectPageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding}"
                        Content="{Binding}"
                        ToolTip="{Binding}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource MaterialDesignIconButton}" TargetType="Button">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
                                <Style.Triggers>
                                    <DataTrigger Value="True">
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource PageEqualityConverter}">
                                                <Binding Path="." />
                                                <Binding Path="DataContext.CurrentPage" />
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <Setter Property="Background" Value="White" />
                                        <Setter Property="Foreground" Value="Black" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </DataTemplate>
            </helper:PageItemTemplateSelector.PageNumberTemplate>
            <helper:PageItemTemplateSelector.EllipsisTemplate>
                <DataTemplate>
                    <TextBlock
                        Width="40"
                        Height="40"
                        Margin="5,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Text="..." />
                </DataTemplate>
            </helper:PageItemTemplateSelector.EllipsisTemplate>
        </helper:PageItemTemplateSelector>
    </UserControl.Resources>
    <Grid Background="#F5F7FA">
        <materialDesign:Card
            Margin="16,8,16,16"
            Padding="24"
            materialDesign:ElevationAssist.Elevation="Dp6"
            Background="White"
            UniformCornerRadius="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <!--  Header  -->
                <Grid Grid.Row="0" Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Button
                            x:Name="BackButton"
                            Height="36"
                            HorizontalAlignment="Left"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            Background="Transparent"
                            Command="{Binding BackCommand}"
                            Foreground="#2D3748"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="Quay lại danh sách quy tắc để hàng">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="24"
                                    Height="24"
                                    Kind="ArrowLeft" />
                            </StackPanel>
                        </Button>
                        <TextBlock
                            Margin="10,0,0,0"
                            FontSize="24"
                            FontWeight="Bold"
                            Text="Quy tắc để hàng" />
                    </StackPanel>
                    <Button
                        Grid.Column="2"
                        materialDesign:ButtonAssist.CornerRadius="8"
                        Background="AliceBlue"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        ToolTip="Lưu">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                Margin="0,0,10,0"
                                Kind="ContentSave" />
                            <TextBlock VerticalAlignment="Center" Text="Lưu" />
                        </StackPanel>
                    </Button>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <DataGrid
                        x:Name="PutAwayRulesDataGrid"
                        Grid.Row="0"
                        Margin="0,8,0,16"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="True"
                        ItemsSource="{Binding LstPutAwayRules, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource ModernDataGridStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding PutAwayRuleCode}"
                                Header="Mã quy tắc" />
                            <DataGridTemplateColumn Width="*" Header="Kho áp dụng">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox
                                            Padding="1"
                                            VerticalContentAlignment="Center"
                                            DisplayMemberPath="WarehouseName"
                                            IsEditable="False"
                                            ItemsSource="{Binding DataContext.AvailableWarehouses, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            SelectedItem="{Binding SelectedWarehouse, UpdateSourceTrigger=PropertyChanged}"
                                            SelectedValue="{Binding WarehouseToApply, UpdateSourceTrigger=PropertyChanged}"
                                            SelectedValuePath="WarehouseCode">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock>
                                                        <Run Text="{Binding WarehouseCode}" />
                                                        <Run Text=" - " />
                                                        <Run Text="{Binding WarehouseName}" />
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="*" Header="Sản phẩm">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox
                                            Padding="1"
                                            VerticalContentAlignment="Center"
                                            IsEditable="False"
                                            ItemsSource="{Binding DataContext.AvailableProducts, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            SelectedItem="{Binding SelectedProduct, UpdateSourceTrigger=PropertyChanged}"
                                            SelectedValue="{Binding ProductCode, UpdateSourceTrigger=PropertyChanged}"
                                            SelectedValuePath="ProductCode">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock>
                                                        <Run Text="{Binding ProductCode}" />
                                                        <Run Text=" - " />
                                                        <Run Text="{Binding ProductName}" />
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="*" Header="Vị trí">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox
                                            Padding="1"
                                            VerticalContentAlignment="Center"
                                            IsEditable="False"
                                            ItemsSource="{Binding AvailableLocations}"
                                            SelectedItem="{Binding SelectedLocation, UpdateSourceTrigger=PropertyChanged}"
                                            SelectedValue="{Binding LocationCode, UpdateSourceTrigger=PropertyChanged}"
                                            SelectedValuePath="LocationCode">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock>
                                                        <Run Text="{Binding LocationCode}" />
                                                        <Run Text=" - " />
                                                        <Run Text="{Binding LocationName}" />
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="*" Header="Định mức">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox
                                            Padding="1"
                                            VerticalContentAlignment="Center"
                                            IsEditable="False"
                                            ItemsSource="{Binding DataContext.AvailableStorageProducts, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            SelectedItem="{Binding SelectedStorageProduct, UpdateSourceTrigger=PropertyChanged}"
                                            SelectedValue="{Binding StorageProductId, UpdateSourceTrigger=PropertyChanged}"
                                            SelectedValuePath="StorageProductId">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock>
                                                        <Run Text="{Binding StorageProductId}" />
                                                        <Run Text=" - " />
                                                        <Run Text="{Binding StorageProductName}" />
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="80" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Command="{Binding DataContext.DeletePutAwayRuleLineCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            ToolTip="Xóa dòng">
                                            <materialDesign:PackIcon
                                                Width="20"
                                                Height="20"
                                                Kind="Delete" />
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid Grid.Row="1" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Grid.Column="0"
                            Padding="8,4"
                            HorizontalAlignment="Left"
                            Command="{Binding AddPutAwayRuleLineCommand}"
                            Content="Thêm dòng"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="Thêm quy tắc để hàng mới" />
                    </Grid>
                    <StackPanel
                        Grid.Row="2"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                        <Button
                            Width="40"
                            Height="40"
                            Command="{Binding PreviousPageCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Trang trước">
                            <materialDesign:PackIcon
                                Width="20"
                                Height="20"
                                Kind="ArrowLeft" />
                        </Button>
                        <ItemsControl ItemsSource="{Binding DisplayPages}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplateSelector>
                                <StaticResource ResourceKey="PageItemTemplateSelector" />
                            </ItemsControl.ItemTemplateSelector>
                        </ItemsControl>
                        <Button
                            Width="40"
                            Height="40"
                            Command="{Binding NextPageCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Trang sau">
                            <materialDesign:PackIcon
                                Width="20"
                                Height="20"
                                Kind="ArrowRight" />
                        </Button>
                    </StackPanel>
                </Grid>
                <!--  Snackbar  -->
                <materialDesign:Snackbar
                    x:Name="PutAwayRulesSnackbar"
                    Grid.Row="2"
                    Width="Auto"
                    Margin="16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    MessageQueue="{materialDesign:MessageQueue}" />
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>